generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  password  String    // Hash da senha (Bcrypt)
  name      String
  avatar    String?   // Nome do arquivo da imagem (ex: "avatar-123.jpg")
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  folders   Folder[]
  trackers  Tracker[]
}

model Folder {
  id        Int      @id @default(autoincrement())
  title     String  
  emoji     String?  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId    Int
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  notes     Note[]
}

model Note {
  id        Int      @id @default(autoincrement())
  title     String
  body      String   @db.Text @default("")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  folderId  Int
  folder    Folder   @relation(fields: [folderId], references: [id], onDelete: Cascade)
}

model Tracker {
  id              Int      @id @default(autoincrement())
  title           String   
  
  value           Float    @default(0)
  
  isCurrency      Boolean  @default(false)
  isInteger       Boolean  @default(false) 
  stepValue       Float    @default(1)     

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  userId          Int
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}
